---
export interface Props {
  title: string;
}

import LeftSideBar from "../components/LeftSideBar.astro";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-900 min-h-screen pt-8">
    <main class="max-w-7xl mx-auto grid grid-cols-[250px_auto_250px]">
      <nav>
        <LeftSideBar />
      </nav>
      <slot />
    </main>
  </body>
</html>
<style is:global>
  html {
    font-family: "ChubboRegular";
    background-color: #f6f6f6;
  }

  @font-face {
    font-family: "ChubboBold";
    src: url("/fonts/Chubbo-Bold.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  /* @font-face {
    font-family: "Chubbo-Light";
    src: url("/fonts/Jost-Medium.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  } */
  @font-face {
    font-family: "ChubboMedium";
    src: url("/fonts/Chubbo-Medium.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "ChubboRegular";
    src: url("/fonts/Chubbo-Regular.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  code {
    font-family: "ChubboBold", "ChubboMedium", "ChubboRegular", monospace;
  }
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  /* remove default spacing */
  /* force styling of type through styling, rather than elements */

  * {
    margin: 0;
    padding: 0;
    font: inherit;
  }

  /* responsive images/videos */
  img,
  picture,
  svg,
  video {
    display: block;
    max-width: 100%;
  }

  ul,
  li {
    list-style: none;
  }
</style>
